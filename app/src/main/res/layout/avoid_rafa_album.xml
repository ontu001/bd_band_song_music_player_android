<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvoidRafa"
    android:orientation="vertical"
    android:background="@drawable/backdesign"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/rafac"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                />

            <!-- Start=========================== -->


            <LinearLayout
                android:id="@+id/harkala"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/har"
                    android:scaleType="centerCrop"
                    android:layout_margin="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AvoidRafa - Har Kala"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Artist: AvoidRafa
Album: Bhaar
Released: 2016"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:gravity="left"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 5:31"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        />



                </LinearLayout>






            </LinearLayout>



            <!-- end=========================== -->


            <!-- Start=========================== -->


            <LinearLayout
                android:id="@+id/odvut"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/odvut"
                    android:scaleType="centerCrop"
                    android:layout_margin="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AvoidRafa - Odbhuture Tumi"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Artist: AvoidRafa
Album: Bhaar
Released: 2016"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:gravity="left"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 5:58"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        />



                </LinearLayout>






            </LinearLayout>



            <!-- end=========================== -->









            <!-- Start=========================== -->


            <LinearLayout
                android:id="@+id/akash"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/akash"
                    android:scaleType="centerCrop"
                    android:layout_margin="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="avoidrafa - আমি আকাশ পাঠাব "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Artist: Raef al Hasan Rafa"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:gravity="left"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 4:03"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        />



                </LinearLayout>






            </LinearLayout>



            <!-- end=========================== -->






        </LinearLayout>







    </ScrollView>

</LinearLayout>