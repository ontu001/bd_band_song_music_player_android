<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Artcell"
    android:orientation="vertical"
    android:background="@drawable/backdesign"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/artcell1"
        android:scaleType="centerCrop"
        android:layout_margin="15dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <!-- Start=========================== -->


            <LinearLayout
                android:id="@+id/oniket"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/oniket"
                    android:scaleType="centerCrop"
                    android:layout_margin="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Oniket Prantor || অনিকেত প্রান্তর || Artcell "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Song : Oniket Prantor Band : Artcell Lyric : Artcell Tune : Artcell
Music : Ar cell
Album : Oniket Prantor
Language : Bangla
Label : G Series"
                        android:textStyle="italic"
                        android:gravity="left"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration : 16:20"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />



                </LinearLayout>






            </LinearLayout>



            <!-- end=========================== -->









            <!-- Start=========================== -->


            <LinearLayout
                android:id="@+id/dhusor"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dhusor"
                    android:scaleType="centerCrop"
                    android:layout_margin="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dhushor Shomoy || ধূসর সময় || Artcell "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Artcell
Lyric : Rumman Ahmed
Vocal Guitar : Lincoln
Guitar : Ershad
Bass : Cezanne
Drums : Saju
Album : Oniket Prantor
Language : Bangla
Label : G Series"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:gravity="left"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 6:52"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />



                </LinearLayout>






            </LinearLayout>



            <!-- end=========================== -->








            <!-- Start=========================== -->


            <LinearLayout
                android:id="@+id/dukkho"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dukkho"
                    android:scaleType="centerCrop"
                    android:layout_margin="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dukkho Bilash | দুঃখ বিলাশ | Artcell"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Song : Dukkho Bilash (দুঃখ বিলাশ)
Band : Artcell
Lyric, Tune Music : Artcell
Album : Anushilon"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:gravity="left"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 6:41"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />



                </LinearLayout>






            </LinearLayout>



            <!-- end=========================== -->




            <!-- Start=========================== -->


            <LinearLayout
                android:id="@+id/poth"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/poth"
                    android:scaleType="centerCrop"
                    android:layout_margin="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Poth Chola | পথ চলা | Artcell Band | Album Onnosomoy"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Song : Poth Chola  (পথ চলা)
Band : Artcell
Lyric : Artcell
Tune : Artcell
Music : Artcell
Album : Onnosomoy"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:gravity="left"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 6:55"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />



                </LinearLayout>






            </LinearLayout>



            <!-- end=========================== -->









            <!-- Start=========================== -->


            <LinearLayout
                android:id="@+id/ei"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ei"
                    android:scaleType="centerCrop"
                    android:layout_margin="14dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ei Bidaye || এই বিদায়ে || Artcell"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ei Bidaye (এই বিদায়ে)Band: Artcell Lyric: Ershad Zaman Vocal Guitar: Lincoln
Guitar: Ershad
Bass: Cezanne
Drums: Saju
Album: Live Now (Band Mixed "
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:gravity="left"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration: 5:31"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />



                </LinearLayout>






            </LinearLayout>



            <!-- end=========================== -->


        </LinearLayout>

    </ScrollView>


</LinearLayout>